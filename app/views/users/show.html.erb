<% provide(:title, @user.name) %>
  <div class="row">
    <div class="col-md-4">
      <section class="user_info">
        <h1>
          <%= gravatar_for @user %>
          <%= @user.name %>
        </h1>
       <% if current_user.admin? %>
        <button id="sendMessageButton" type="submit"><%= link_to "edit", edit_user_path(@user) %></button>
      <% end %>
      </section>
    </div>
  </div>

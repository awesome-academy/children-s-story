<%= form_for (@tale.reviewtales.build) do |f| %>
  <div id="rating-form">
    <label>Đánh giá sao:</label>
  </div>
  <%= f.label :comment %>
  <%= f.text_field :comment, class: 'form-control' %>

  <%= f.submit "create tale", class: "btn btn-primary" %>
<% end %>

<script>
  $("#rating-form").raty({
    path: "/assets",
    scoreName: "reviewtale[rating]"
  });
</script>

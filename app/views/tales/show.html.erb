<div class="row">
  <section class="user_info">
    <div class="img-picture"><% @tale.pictures.each do |picture| %>
        <% if picture.image.attached? %>
          <%= image_tag url_for(picture.image) %>
        <% end %>
      <% end %>
    </div>
    <% if current_user.admin? %>
      <button id="sendMessageButton" type="submit"><%= link_to "edit", edit_tale_path(@tale) %></button>
      <button id="sendMessageButton" type="submit"><%= link_to "delete",tale_path(@tale), method: :delete %></button>
    <% end %>
  </section>
</div>
